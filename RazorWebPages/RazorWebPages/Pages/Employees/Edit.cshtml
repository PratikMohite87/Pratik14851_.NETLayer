
@page "{id:int?}"
@using RazorWebPages.Models
@model RazorWebPages.Pages.Employees.EditModel
@{
    var pageHeader = Model.Employee.Id > 0 ? "Edit" : "Create";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<h1>@pageHeader</h1>

<form method="post" >
    <input hidden asp-for="Employee.Id"/>

    <table>
        <tr>
            <td>
                <label asp-for="Employee.Name"></label>
            </td>
            <td>
                <input asp-for="Employee.Name" placeholder="Name" />
                <span asp-validation-for="Employee.Name"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Employee.Email"></label>
            </td>
            <td>
                <input asp-for="Employee.Email" placeholder="Name" />
                <span asp-validation-for="Employee.Email"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Employee.Department"></label>
            </td>
            <td>
                <select asp-for="Employee.Department" asp-items="Html.GetEnumSelectList<DeptOptions>()">
                   <option value="">Please select</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <button type="submit">Save</button>
                <a asp-page="/Employee/Index">Cancel</a>
            </td>
        </tr>
    </table>
</form>
