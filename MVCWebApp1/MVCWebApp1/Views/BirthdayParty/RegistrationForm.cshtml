@model Guest 

@{
    ViewData["Title"] = "RegistrationForm";
}

<div class="row">
    <div class="col-4">

    </div>
    <div class="col-4 d-flex justify-content-center align-items-center">
        <h1>Registration</h1>
    </div>
    <div class="col-4">

    </div>
</div>

<div class="row">
    <div class="col-4 bg-dark"></div>
    <div class="col-4">
        <form asp-controller="BirthdayParty" asp-action="Acknowledgment" method="post">
            <div class="form-group">
                <label asp-for="GuestName">Name:</label>
                <input type="text" class="form-control" asp-for="GuestName"/>
                <span asp-validation-for="GuestName" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestEmail">Email:</label>
                <input type="text" class="form-control" asp-for="GuestEmail"/>
                <span asp-validation-for="GuestEmail" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestPhone">Phone:</label>
                <input type="text" class="form-control" asp-for="GuestPhone"/>
                <span asp-validation-for="GuestPhone" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestDecision">Coming:</label>
                <select type="text" class="form-control" asp-for="GuestDecision" placeholder="Choose">
                    <option value="yes">Yes, I am Coming</option>
                    <option value="no">No, I am not coming</option>
                </select>
                <span asp-validation-for="GuestDecision" class="alert-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
    <div class="col-4 bg-dark"></div>
</div>

